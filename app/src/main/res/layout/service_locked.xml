<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@drawable/main_screen"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout
        android:textColor="#ffffff"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:id="@+id/frameLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="DuplicateIds">
        <ImageView
            android:id="@+id/half_screen_line"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/half_screen"
            android:scaleType="fitXY"/>
        <FrameLayout
            android:textColor="#ffffff"
            android:orientation="vertical"
            android:id="@+id/frameLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/lock_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:src="@drawable/locked"
                android:onClick="onClickLockButton"/>
            <ImageView
                android:layout_gravity="top|right|center_vertical|center_horizontal|center"
                android:id="@+id/insert_paper_button"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:visibility="gone"
                android:src="@drawable/insertpaper"
                android:onClick="onClickInsertPaperButton"/>
            <ImageView
                android:layout_gravity="center"
                android:id="@+id/drag_imageView"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/drag_guide"/>
        </FrameLayout>
        <ImageView
            android:id="@+id/main_screen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/drag_guide_Layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="20dp"
            android:textColor="#ffffff"
            android:layout_gravity="top|center_vertical|center_horizontal|center"
            android:id="@+id/alpha_percentage"
            android:background="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:text="@string/alpha_percentate_string"/>
    </FrameLayout>
</LinearLayout>
